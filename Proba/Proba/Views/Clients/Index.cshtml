                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                
                <img src="~/UserImages/@item.ImagePath" style="max-width:200px" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) |
