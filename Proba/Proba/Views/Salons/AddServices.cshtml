@model Proba.Models.AddServicesViewModel

@{
    ViewBag.Title = "Додади сервис";
}

<h2 class="naslov-formi">Додади сервис</h2>
<h4>За секоја услуга која ја нуди вашиот салон пополнете ги потребните информации. Со кликање на копчето додади услуга ја додавате тековната услуга. Со кликање на копчето Зачувај ги зачувувате пополнетите податоци и завршувате со внесувањето на услугите.</h4>
<br />
<hr />
@using (Html.BeginForm("AddServices", "Salons", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(m => m.SalonId)
    <div class="form-group" style="padding-left:15%">
        @Html.DisplayNameFor(m => m.Service.TypeOfService)
        @Html.DropDownListFor(m => m.Service.TypeOfService, new SelectList(ViewBag.Services, "TypeOfService", "Name"), new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Service.TypeOfService, "", new { @class = "text-danger" })
    </div>
    <div class="form-group" style="padding-left:15%">
        @Html.DisplayNameFor(m => m.Service.Name)
        @Html.TextBoxFor(m => m.Service.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Service.Name, "", new { @class = "text-danger" })
    </div>
    <div class="form-group" style="padding-left:15%">
        @Html.DisplayNameFor(m => m.Service.Price) (денари)
        @Html.TextBoxFor(m => m.Service.Price, new { @class = "form-control" }) 
        @Html.ValidationMessageFor(m => m.Service.Price, "", new { @class = "text-danger" })
    </div>
    <div class="form-group" style="padding-left:15%">
        @Html.DisplayNameFor(m => m.Service.Duration)<br />
        @Html.EditorFor(m => m.Service.Duration, new { htmlAtrributes = new { @class = "form-control" } }) минути
        @Html.ValidationMessageFor(m => m.Service.Duration, "", new { @class = "text-danger" })
    </div>
    <div class="form-group" style="padding-left:15%">
        
        <div class="col-md-10">
            @Html.LabelFor(model => model.Service.files, htmlAttributes: new { @class = "control-label col-md-2" })
            <input type="file" id="Service.files" multiple="multiple" name="Service.files" class="btn btn-block default kopce-formi" />
        </div>
        @Html.ValidationMessageFor(m => m.Service.files, "", new { @class = "text-danger" })
    </div>
    
    <div style="padding-left: 15%; padding-top:7%">
        <input type="submit" value="Додади услуга" class="btn btn-block default kopce-formi" />
    </div>
    
}

<br />
<br />
<p class="nazad-formi" style="text-align:center;clear:both">
    @Html.ActionLink("ЗАЧУВАЈ", "Index", "Home")
</p>

