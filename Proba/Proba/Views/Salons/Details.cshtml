@model Proba.Models.Salon

@{
    ViewBag.Title = "Details";
}

@*
DETAILS SALON    
*@

<div>
    <img class="slika-profil" src="~/UserImages/@Model.ImagePath" style="max-width:300px !important"/>

    <h1 class="header-profil">

        <b class="naslov-profil">
            @Html.DisplayFor(model => model.Name)
          
        </b>

    </h1>

    <br />
    <br />
</div>

<div class="form-horizontal info-profil">

    <div style=" padding: 5% 0;">

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Address)
            </div>
            <div class="col-md-6">
                @Html.Label(Model.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.City)
            </div>
            <div class="col-md-6">
                @Html.Label(Model.City)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Rating)
            </div>
            <div class="col-md-6">
                @Html.Label(Model.Rating.ToString())
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.numChairs)
            </div>
            <div class="col-md-6">
                @Html.Label(Model.numChairs.ToString())
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-2">
                @Html.LabelFor(model => model.Services)
            </div>
            <div class="col-md-6">
                @foreach (var service in Model.Services)
                {

                    <div class="form-group">
                        <div class="col-md-3">
                            @Html.Label(service.Name)
                        </div>

                        <div class="col-md-2">
                            @Html.Label(service.Price.ToString()) ден.
                            
                            @if (User.IsInRole("Client")){
                                <button class="btn btn-block default">
                                    <span>РЕЗЕРВИРАЈ</span>
                                </button>
                            }
                        </div>

                        
                    </div>
                }
            </div>
        </div>

        @if(User.IsInRole("Salon") && User.Identity.Equals(Model.UserId)){
        <h5>
            <i>
                @Html.ActionLink("Ажурирај профил", "Edit", new { id = Model.UserId })
            </i>
        </h5>
        }


    </div>
</div>

